<div class="tetris" data-controller="tetris" data-action="keydown@window->tetris#moveInput keyup@window->tetris#otherInput" data-tetris-link-value="<%= game_scores_path(game) %>">
  <div class="row justify-content-center w-100">

    <div class="row justify-content-center">
      <div id="score" class="col-12 col-sm-8 col-md-6">
        <div class="scoreboard d-flex justify-content-between">
          <h3 class="text-end ps-3 py-1 m-0">Score</h3>
          <h3 data-tetris-target="score" class="text-end pe-3 py-1 m-0">0</h3>
        </div>
      </div>
    </div>
    <div class="row mt-3 justify-content-end align-items-end">
      <h2 class="text-center col-6" data-tetris-target="level">Level 1</h2>
      <div class="next-piece col-3">
        <% y = -1 %>
        <% 5.times do %>
          <div class="d-flex justify-content-center">
            <% x = 4 %>
            <% 5.times do %>
              <div id="next-<%= x %>,<%= y %>" class="next-grid empty" data-tetris-target="nextGrid"></div>
              <% x += 1 %>
            <% end %>
          </div>
          <% y += 1 %>
        <% end %>
      </div>
    </div>

    <div class="col-12 d-flex flex-column align-items-center">
      <div class="board" data-action="touchmove->tetris#touchControl touchstart->tetris#setTouchCoordinates">
        <% y = 0 %>
        <% 22.times do %>
          <div class="d-flex justify-content-center" data-tetris-target="row">
            <% x = 0 %>
            <% 12.times do %>
              <div id="<%= x %>,<%= y %>" class="grid empty" data-tetris-target="grid"></div>
              <% x += 1 %>
            <% end %>
          </div>
          <% y += 1 %>
        <% end %>

      <%= render 'games/tetris/mobile/start_game', formats: :html %>
      <div data-tetris-target="gameOver"></div>
      <div data-tetris-target="paused"></div>
      </div>
      <div class="volume-control d-flex justify-content-center pt-3 ms-5 ps-5">
        <p>
          <i class="fa-solid fa-volume-high"  data-action="click->tetris#mute" data-tetris-target="muteBtn"></i>
          <i class="fa-solid fa-volume-xmark" data-action="click->tetris#unmute" data-tetris-target="unmuteBtn"></i>
        </p>
      </div>
    </div>

    <div class="col-12">
      <div id="high-scores" class="high-scores scoreboard" data-tetris-target="highscores">
        <%= render 'games/tetris/high_scores', formats: :html, scores: game.scores %>
      </div>
    </div>
  </div>

  <audio data-tetris-target="music" src="<%= audio_path 'tetris.weba'%>" type="audio/weba" loop></audio>
  <audio data-tetris-target="loseAudio" src="<%= audio_path 'lose.m4a'%>" type="audio/m4a"></audio>
  <audio data-tetris-target="pauseAudio" src="<%= audio_path 'pause.weba'%>" type="audio/weba"></audio>
  <audio data-tetris-target="lineClearAudio" src="<%= audio_path 'lineclear.weba'%>" type="audio/weba"></audio>
</div>
