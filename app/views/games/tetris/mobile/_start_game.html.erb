<div id="start" data-tetris-target="start">
  <h2>Controls</h2>

  <div class="d-flex justify-content-between w-100 px-3">
    <p class=" action">Move</p>
    <div class="d-flex justify-content-between">
      <p class="ps-3"><i class="fa-solid fa-arrow-left-long"></i></p>
      <p class="ps-3"><i class="fa-solid fa-arrow-down-long"></i></p>
      <p class="ps-3"><i class="fa-solid fa-arrow-right-long"></i></p>
    </div>
  </div>

  <div class="d-flex justify-content-between w-100 text-end px-3">
    <p class="">Rotate</p>
    <p class="">SPACE</p>
  </div>

  <div class="d-flex justify-content-between w-100 text-end px-3">
    <p class="">Mute</p>
    <p class="">M</p>
  </div>

  <div class="d-flex justify-content-between w-100 text-end px-3">
    <p class="">Pause</p>
    <p class="">P</p>
  </div>
  <button data-action="click->tetris#start" data-tetris-target="startBtn">START</button>
</div>
